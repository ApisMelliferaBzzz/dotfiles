#
# bspwm hotkeys
#

XF86AudioMute
	exec amixer set Master toggle
XF86AudioRaiseVolume
	exec amixer set PCM 3dB+
XF86AudioLowerVolume
	exec amixer set PCM 3dB-

alt + z
	mpc -h bucCelLati@0.0.0.0 prev
alt + x
	mpc -h bucCelLati@0.0.0.0 toggle
alt + c
	mpc -h bucCelLati@0.0.0.0 next


alt + F4
	bspc node -c

alt + F3
	sh ~/.config/sxhkd/monocle.sh

alt + b
	bspc desktop -B

alt + {s,f}
	bspc node -t {floating,fullscreen}

alt + {_,shift + } d
	bspc node -t {tiled,pseudo_tiled}

alt + apostrophe
	bspc node -s last

alt + y
	bspc node -w last.manual

alt + m
	bspc node -s biggest

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#alt + {_,shift + }v
#    bspc window -f {next,prev}
alt + Tab
	bspc node -f next.local

alt + {comma,period}
	bspc desktop -C {backward,forward}


alt + bracket{left,right}
	bspc desktop -f {prev,next}
alt + Prior
	bspc desktop -f prev
alt + Next
	bspc desktop -f next

alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

alt + super + {h,j,k,l}
	bspc node -e {west,south,north,east} push

alt + super + shift + {h,j,k,l}
	bspc node -e {east,north,south,west} pull

alt + ctrl + {1-9,0}
	bspc node -r 0.{1-9,10}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# Resize nodes
ctrl + shift + {h,l}
#    S={-,+}; \
#    bspc node -e left $\{S\}20 || \
#    bspc node -e right $\{S\}20
	bspc node -z left {-,+}20 0 || \
	bspc node -z right {-,+}20 -
ctrl + shift + {j,k}
#    S={+,-}; \
	bspc node -z down {-,+}20 0 || \
	bspc node -z up {-,+}20 0
#alt + ctrl + shift +

# Balance tree
alt + b
	bspc node -B

# Move window into presel position
alt + shift {a,s,d,f}
	bspc node -w {left.manual,down.manual,up.manual,right.manual}
# Toggle pseudotiled (floating in tile)
alt + shift + space
	bspc window -t pseudo_tiled
# Change window gap
alt + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 50 ))

~button1
	bspc node pointed -f

#alt + button1
#	bspc node pointed -v 1 1
#	bspc node pointed {move,resize_side,resize_corner}

#alt + !button{1-3}
#	bspc pointer -t %i, %i

#alt + @button{1-3}
#	bspc pointer -u

#
# wm independent hotkeys
#

Print
#	shutter -f -n -e
	scrot -e 'mv $f /home/bee/Media_storage/images/scrot 2>/dev/null'
#	scrot -e 'mv $f /home/bee/images 2>/dev/null'

alt + Print
	shutter -s -n -e

alt + Return
	termite

alt + space
	dmenu_run -h 21 -w 1368 -q -nb '#202020' -nf '#888' -sb '#256'
#    dmenu_run -nb "#111" -nf "#888" -sb "#256"

# make sxhkd reload its configuration files:
alt + Escape
	killall sxhkd && sxhkd
#    pkill -USR1 -x sxhkd
{Super_L,Super_R}
	mygtkmenu /home/bee/.i3/LaunchMenuTop
~button8
	sh /home/bee/.i3/get_position.sh

super + alt + Escape
	bspc wm -d > "$BSPWM_STATE" && bspc quit
